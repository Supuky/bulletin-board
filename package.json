{
  "name": "bulletin-board",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "generate-scss-enums:watch": "node ./scripts/scss/index.mjs --watch",
    "generate-scss-enums:static": "node ./scripts/scss/index.mjs",
    "local-dev": "node ./scripts/env/index.mjs --mode=loc && NODE_OPTIONS='--inspect' next dev -p 8000 --experimental-https",
    "dev": "run-p generate-scss-enums:watch local-dev",
    "build:dev": "npm run generate-scss-enums:static && node ./scripts/env/index.mjs --mode=dev && next build",
    "build:loc": "npm run generate-scss-enums:static && node ./scripts/env/index.mjs --mode=loc && next build",
    "build:stg": "npm run generate-scss-enums:static && node ./scripts/env/index.mjs --mode=stg && next build",
    "build:prd": "npm run generate-scss-enums:static && node ./scripts/env/index.mjs --mode=prd && next build",
    "start": "next start",
    "lint-ts": "next lint",
    "lint-style": "stylelint 'src/**/*.scss'",
    "lint-markuplint": "markuplint \"./**/*.tsx\"",
    "lint-all": "run-p lint-ts lint-style lint-markuplint",
    "test": "jest --passWithNoTests",
    "prepare": "husky",
    "mock": "nodemon",
    "local-storybook": "storybook dev -p 6006",
    "storybook": "run-p gengerate-scss-enums:static local-storybook",
    "build-storybook": "npm run generate-scss-enums:static && storybook build"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@hono/zod-validator": "^0.2.2",
    "clsx": "^2.1.1",
    "hono": "^4.7.7",
    "next": "^14.2.28",
    "qs": "^6.14.0",
    "react": "^18",
    "react-dom": "^18",
    "swr": "^2.3.3",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@faker-js/faker": "^8.4.1",
    "@markuplint/jsx-parser": "^4.7.19",
    "@markuplint/react-spec": "^4.5.19",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-links": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/nextjs": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/qs": "^6.9.18",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/parser": "^8.30.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.28",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-typescript-sort-keys": "^3.3.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "markuplint": "^4.12.0",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "sass": "^1.86.3",
    "schema-dts": "^1.1.5",
    "storybook": "^8.6.12",
    "storybook-addon-sass-postcss": "^0.3.2",
    "stylelint": "^16.18.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-order": "^6.0.4",
    "swc-plugin-unassert": "^0.1.0",
    "ts-jest": "^29.3.2",
    "typescript": "^5",
    "typescript-eslint": "^8.30.1",
    "user-agent-data-types": "^0.4.2"
  },
  "volta": {
    "node": "20.15.1",
    "npm": "10.8.1"
  }
}
